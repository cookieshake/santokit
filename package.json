{
  "name": "santoki",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/entrypoints/node.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/entrypoints/node.js",
    "dev:cf": "wrangler dev --main src/entrypoints/wf.ts",
    "deploy:cf": "wrangler deploy --minify --main src/entrypoints/wf.ts --name santoki",
    "typegen:cf": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hono/zod-validator": "^0.7.6",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "paseto": "^3.1.4",
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "testcontainers": "^10.18.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
