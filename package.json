{
  "name": "santoki",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"tsx watch src/entrypoints/node.ts\"",
    "build": "npm run build:css && tsc && tsc-alias",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./src/assets/admin-ui.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./src/assets/admin-ui.css --minify",
    "start": "node dist/entrypoints/node.js",
    "dev:cf": "wrangler dev --main src/entrypoints/wf.ts",
    "deploy:cf": "wrangler deploy --minify --main src/entrypoints/wf.ts --name santoki",
    "typegen:cf": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@hono/node-server": "^1.19.8",
    "@hono/zod-validator": "^0.7.6",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "daisyui": "^5.5.14",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
