{
  "name": "santoki",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/entrypoints/node.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/entrypoints/node.js",
    "dev:cf": "wrangler dev --main src/entrypoints/wf.ts",
    "deploy:cf": "wrangler deploy --minify --main src/entrypoints/wf.ts --name santoki",
    "typegen:cf": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run",
    "test:pg": "TEST_DB_TYPE=postgres vitest run",
    "db:migrate": "tsx src/db/migrate.ts",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hono/zod-validator": "^0.7.6",
    "hono": "^4.11.3",
    "kysely": "^0.27.5",
    "paseto": "^3.1.4",
    "pg": "^8.16.3",
    "sql-formatter": "^15.7.0",
    "typeid-js": "^1.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.0",
    "testcontainers": "^10.18.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
