{
  "name": "santoki",
  "type": "module",
  "scripts": {
    "dev:admin": "tsx watch src/entrypoints/node-admin.ts",
    "dev:public": "tsx watch src/entrypoints/node-public.ts",
    "dev:aio": "tsx watch src/entrypoints/node-aio.ts",
    "build": "tsc && tsc-alias",
    "start:admin": "node dist/entrypoints/node-admin.js",
    "start:public": "node dist/entrypoints/node-public.js",
    "start:aio": "node dist/entrypoints/node-aio.js",
    "dev:cf:admin": "wrangler dev --main src/entrypoints/wf-admin.ts",
    "dev:cf:public": "wrangler dev --main src/entrypoints/wf-public.ts",
    "dev:cf:aio": "wrangler dev --main src/entrypoints/wf-aio.ts",
    "deploy:cf:admin": "wrangler deploy --minify --main src/entrypoints/wf-admin.ts --name santoki-admin",
    "deploy:cf:public": "wrangler deploy --minify --main src/entrypoints/wf-public.ts --name santoki-public",
    "deploy:cf:aio": "wrangler deploy --minify --main src/entrypoints/wf-aio.ts --name santoki-aio",
    "typegen:cf": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hono/zod-validator": "^0.7.6",
    "better-auth": "^1.4.12",
    "casbin": "^5.48.0",
    "casbin-drizzle-adapter": "^1.1.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}